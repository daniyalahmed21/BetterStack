generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String   @id @default(cuid())
  email         String   @unique
  name          String
  emailVerified Boolean  @default(false)
  image         String?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  sessions           Session[]
  accounts           Account[]
  websites           Website[]
  heartbeats         Heartbeat[]
  statusPages        StatusPage[]
  alertChannels      AlertChannel[]
  escalationPolicies EscalationPolicy[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Website {
  id            String        @id @default(uuid())
  url           String
  name          String?
  userId        String
  createdAt     DateTime      @default(now())
  status        WebsiteStatus @default(Unknown)
  lastCheckedAt DateTime?
  user          User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  ticks         WebsiteTick[]
  incidents     Incident[]
  statusPages   StatusPage[]  @relation("WebsiteToStatusPage")

  @@unique([userId, url])
  @@index([userId])
}

model Region {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())

  ticks WebsiteTick[]
}

model WebsiteTick {
  id             String        @id @default(uuid())
  websiteId      String
  regionId       String
  responseTimeMs Int
  status         WebsiteStatus
  createdAt      DateTime      @default(now())

  website Website @relation(fields: [websiteId], references: [id], onDelete: Cascade)
  region  Region  @relation(fields: [regionId], references: [id])

  @@index([websiteId, createdAt])
  @@index([regionId, createdAt])
}

enum WebsiteStatus {
  Up
  Down
  Unknown
}

model Incident {
  id        String         @id @default(cuid())
  websiteId String
  startedAt DateTime
  endedAt   DateTime?
  status    IncidentStatus
  alerts    Alert[]

  website Website @relation(fields: [websiteId], references: [id])

  @@index([websiteId, status])
}

enum IncidentStatus {
  Open
  Closed
}

model Alert {
  id         String    @id @default(cuid())
  incidentId String
  type       AlertType
  sentAt     DateTime  @default(now())

  incident Incident @relation(fields: [incidentId], references: [id], onDelete: Cascade)

  @@unique([incidentId, type]) 
}

enum AlertType {
  IncidentStarted
  IncidentResolved
}

model Heartbeat {
  id         String        @id @default(uuid())
  name       String
  userId     String
  period     Int           @default(300) // in seconds
  grace      Int           @default(60)  // in seconds
  status     WebsiteStatus @default(Unknown)
  lastPingAt DateTime?
  createdAt  DateTime      @default(now())
  user       User          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model StatusPage {
  id        String           @id @default(uuid())
  name      String
  slug      String           @unique
  userId    String
  status    StatusPageStatus @default(Draft)
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  websites  Website[]        @relation("WebsiteToStatusPage")

  @@index([userId])
}

enum StatusPageStatus {
  Draft
  Published
}

model AlertChannel {
  id        String           @id @default(uuid())
  name      String
  type      AlertChannelType
  target    String
  userId    String
  active    Boolean          @default(true)
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  steps     EscalationStep[]

  @@index([userId])
}

enum AlertChannelType {
  Email
  Slack
  SMS
  Voice
}

model EscalationPolicy {
  id        String           @id @default(uuid())
  name      String
  userId    String
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  steps     EscalationStep[]

  @@index([userId])
}

model EscalationStep {
  id         String           @id @default(uuid())
  policyId   String
  channelId  String
  delay      Int              @default(0) // in minutes
  policy     EscalationPolicy @relation(fields: [policyId], references: [id], onDelete: Cascade)
  channel    AlertChannel     @relation(fields: [channelId], references: [id], onDelete: Cascade)

  @@index([policyId])
  @@index([channelId])
}
